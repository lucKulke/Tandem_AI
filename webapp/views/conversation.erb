 <div class="container">
        <div class="controls">
            <button id="recordButton">Start Recording</button>
            <button id="stopButton">Stop Recording</button>
            <button id="uploadButton">Send</button>
        </div>
        <div class="conversation">
            <div class="message-box user">
                <p id="user"></p>
            </div>
            <div class="message-box interlocutor">
                <p id="interlocutor"></p>
            </div>
            <div class="history-container">
                <ul id="historyList">
                <% @conversation.reverse.each do |section| %>
                    <li class="chat-item">
                        <div>
                            <div class="chat-item-user">
                                <p class="user"><%= "#{section[0][0][:role]}: #{section[0][0][:content]}"%><button class="show-correction">show correction</button></p>
                                <p class="corrector"><%= "(Corrector: #{section[0][1][:content]})"%><button class="listen_button">listen</button><p>
                            </div>
                            <p class="interlocutor"><%= "#{section[1][:role]}: #{section[1][:content]}"%><p>
    
                        </div>
                    </li>
                <% end %>
                </ul>
                <!-- More conversation history entries will go here -->
            </div>
        </div>
</div>
<div class="audioPlayer">
  <audio controls id="audioPlayer" style="display:none;"></audio>
</div>



